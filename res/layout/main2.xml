<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fdfeff">

    <TextView
        android:id="@+id/textView2"
        android:text="E-mail :"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/high"
        android:layout_alignParentLeft="true"
        android:hint="e-mail"/>

    <TextView
		android:id="@+id/weight"
		android:text="Re-Enter Passphrase : "
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_above="@+id/pp2"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/high"
        android:text="Check Strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/weight"
        android:layout_alignParentRight="true" />

    <EditText
        android:id="@+id/pp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:hint="passphrase"
        android:password="true"/>

    <TextView
        android:id="@+id/textView"
        android:text="Create a Passphrase : "
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pp2"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/high"
        android:layout_alignParentLeft="true"
        android:password="true"
        android:hint="passphrase"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Key"
        android:id="@+id/button"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="17dp"
        android:layout_alignRight="@+id/high"
        android:textSize="25dp" />


</RelativeLayout>
